{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ingredient</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-4">
                <div class="col-md-4">
                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th>Quantity</th>
                                <td>{{ entity.quantity }}</td>
                            </tr>
                            <tr>
                                <th>Unit</th>
                                <td>{{ entity.dictionary.measurementUnit }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ entity.dictionary.name }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <ul class="record_actions">
                        <li>
                            <a href="{{ path('ingredient') }}">
                                Back to the list
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('ingredient_edit', { 'id': entity.id }) }}">
                                Edit
                            </a>
                        </li>
                        <li>{{ form(delete_form) }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
