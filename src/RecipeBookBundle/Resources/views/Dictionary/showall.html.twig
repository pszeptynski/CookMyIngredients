{% extends "::base.html.twig" %}

{% block title %}RecipeBookBundle:Dictionary:showall{% endblock %}

{% block body %}
    <h1>Welcome to the Dictionary:showall page</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-4">
                <div class="col-md-4">
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}

                    <a class="btn btn-info" href="{{ path('newItem') }}"> Add a new ingredient to dictionary </a>
                    <ul>
                        {% for item in dictionary %}
                            <li> ID: {{ item.id }} </li>
                            <li> Name: {{ item.name }} </li>
                            <li> Measurement Unit: {{ item.measurementUnit }} </li>
                            <a class="btn btn-default" href="{{ path('showItem',{'id':item.id}) }}"> Show item </a>
                            <br/>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
