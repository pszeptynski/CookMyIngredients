{% extends "::base.html.twig" %}

{% block title %}RecipeBookBundle:Dictionary:showItem{% endblock %}

{% block body %}
                    <h1>Welcome to the Dictionary:showItem page</h1>
                    <h3>Selected dictionary item: </h3>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4">
                <div class="col-md-4">
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}

                    {# ID: {{ item.id }} <br/>
                     Name: {{ item.name }} <br/>
                     Measurement unit: {{ item.measurementUnit }} <br/>
                 #}

                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>ID:</th>
                                <td>{{ item.id }}</td>
                            </tr>
                            <tr>
                                <th>Name:</th>
                                <td>{{ item.name }}</td>
                            </tr>
                            <tr>
                                <th>Measurement unit: </th>
                                <td>{{ item.measurementUnit }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <ul class="record_actions">
                        <li>
                            <a href="{{ path('showAll') }}">
                                Back to the list
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('updateItem', { 'id': item.id }) }}">
                                Edit
                            </a>
                        </li>
                        {#    <li>{{ form(delete_form) }}</li>#}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
